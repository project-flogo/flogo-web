{
  "name": "Sample app",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.0.0",
  "description": "Sample flogo app",
  "triggers": [
    {
      "id": "timer_trigger",
      "ref": "github.com/project-flogo/contrib/trigger/timer",
      "name": "Timer Trigger",
      "description": "Simple Timer trigger",
      "settings": {},
      "handlers": [
        {
          "action": {
            "ref": "github.com/project-flogo/flow",
            "data": {
              "flowURI": "res://flow:hello_world"
            }
          },
          "settings": {
            "repeating": "true",
            "startDate": "",
            "hours": "",
            "minutes": "",
            "seconds": "15"
          }
        }
      ]
    },
    {
      "id": "receive_http_message",
      "ref": "github.com/project-flogo/contrib/trigger/rest",
      "name": "Receive HTTP Message",
      "description": "Simple REST Trigger",
      "settings": {
        "port": "9999"
      },
      "handlers": [
        {
          "action": {
            "ref": "github.com/project-flogo/flow",
            "data": {
              "flowURI": "res://flow:control_home_light"
            },
            "mappings": {
              "output": [
                {
                  "mapTo": "code",
                  "type": "assign",
                  "value": "$.code"
                },
                {
                  "mapTo": "data",
                  "type": "assign",
                  "value": "$.message"
                }
              ]
            }
          },
          "settings": {
            "method": "POST",
            "path": "/lights/status",
            "autoIdReply": "true",
            "useReplyHandler": "true"
          }
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "flow:hello_world",
      "data": {
        "name": "HelloWorld",
        "tasks": [
          {
            "id": "counter_1",
            "name": "Number Counter",
            "description": "Simple Global Counter Activity",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/counter",
              "input": {
                "counterName": "number",
                "increment": "true",
                "reset": "false"
              }
            }
          },
          {
            "id": "log_1",
            "name": "Logger",
            "description": "Simple Log Activity",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/log",
              "input": {
                "message": "hello world",
                "flowInfo": "true",
                "addToFlow": "true"
              }
            }
          }
        ],
        "links": [
          {
            "from": "counter_1",
            "to": "log_1"
          }
        ]
      }
    },
    {
      "id": "flow:control_home_light",
      "data": {
        "name": "Control home light",
        "metadata": {
          "output": [
            {
              "name": "code",
              "type": "integer"
            },
            {
              "name": "message",
              "type": "string"
            }
          ]
        },
        "tasks": [
          {
            "id": "log_1",
            "name": "Received",
            "description": "Simple Log Activity",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/log",
              "input": {
                "message": "Received request.",
                "flowInfo": "true",
                "addToFlow": "true"
              }
            }
          },
          {
            "id": "log_2",
            "name": "SetToOnLog",
            "description": "Simple Log Activity",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/log",
              "input": {
                "flowInfo": "true",
                "addToFlow": "true"
              },
              "mappings": {
                "input": [
                  {
                    "type": "assign",
                    "value": "$activity[log_1].message",
                    "mapTo": "message"
                  }
                ]
              }
            }
          },
          {
            "id": "actreturn_5",
            "name": "Return",
            "description": "Simple Return Activity",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/actreturn",
              "input": {
                "mappings": [
                  {
                    "mapTo": "message",
                    "type": "literal",
                    "value": "Update light to high successfully"
                  },
                  {
                    "mapTo": "code",
                    "type": "literal",
                    "value": 200
                  }
                ]
              }
            }
          },
          {
            "id": "log_3",
            "name": "SetToOffLog",
            "description": "Simple Log Activity",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/log",
              "input": {
                "flowInfo": "true",
                "addToFlow": "true"
              },
              "mappings": {
                "input": [
                  {
                    "type": "assign",
                    "value": "log",
                    "mapTo": "message"
                  }
                ]
              }
            }
          },
          {
            "id": "actreturn_6",
            "name": "Return (2)",
            "description": "Simple Return Activity",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/actreturn",
              "input": {
                "mappings": [
                  {
                    "mapTo": "message",
                    "type": "literal",
                    "value": "Update light to low successfully"
                  },
                  {
                    "mapTo": "code",
                    "type": "literal",
                    "value": 200
                  }
                ]
              }
            }
          }
        ],
        "links": [
          {
            "from": "log_1",
            "to": "log_2"
          },
          {
            "from": "log_2",
            "to": "actreturn_5"
          },
          {
            "from": "log_1",
            "to": "log_3",
            "type": "expression",
            "value": "$activity[log_1].message=='log'"
          },
          {
            "from": "log_3",
            "to": "actreturn_6"
          }
        ]
      }
    }
  ]
}
